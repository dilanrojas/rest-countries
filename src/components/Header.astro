<header>
  <div class="nav-wrapper container">
    <a href="/">
      <h1>Where in the world?</h1>
    </a>
    <button class="theme-btn">
      <i id="moon-icon" class="fa-regular fa-moon"></i>
      Dark Mode
    </button>
  </div>
</header>

<style>
  header {
    box-shadow: 0px 2px 5px rgb(0, 0, 0, .08);
    background-color: var(--primary-bg);
  }

  .nav-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5em 0em;
    gap: 1em;

    h1 {
      font-size: 1.5em;
      font-weight: 800;
    }
  }

  @media (width <= 390px) {
    .nav-wrapper h1 {
      font-size: 1.3em;
    }
  }

  .theme-btn {
    display: flex;
    gap: .5em;
    background-color: transparent;
    align-items: center;
    justify-content: center;
  }
</style>

<script>
  const themeBtn = document.querySelector(".theme-btn") as HTMLElement
  const moonIco = document.querySelector("#moon-icon")
  const html = document.documentElement

  function saveTheme(theme) {
    currentTheme = theme
    const d = new Date()
    d.setTime(d.getTime() + 365 * 86400000)
    document.cookie = `theme=${theme};path=/;expires=${d.toUTCString()}`
  }

  let currentTheme
  if (window.matchMedia('(prefers-color-scheme: light').matches) {
    currentTheme = "light"
  } else {
    currentTheme = "dark"
  }

  themeBtn.addEventListener("click", () => {
    if (html.classList.contains("light")) {
      html.classList.remove("light")
      html.classList.add("dark")
      saveTheme("dark")
    } else {
      html.classList.remove("dark")
      html.classList.add("light")
      saveTheme("light")
    }
    moonIco.classList.contains("fa-regular")
      ? moonIco.classList.replace("fa-regular", "fa-solid")
      : moonIco.classList.replace("fa-solid", "fa-regular")
  })

  if (html.classList.contains("dark")) {
    moonIco.classList.replace("fa-regular", "fa-solid")
  }

</script>